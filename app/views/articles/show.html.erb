<% content_for :viewSpecificStylesheets do %>
  <%= stylesheet_link_tag "maxi_articles" %>
<% end %>

<% content_for :pageTitle do %>
  <%= @article.title %>
<% end %>

<article>
  <header>
    <%= image_tag @article.illustration.url(:maxi), alt: @article.title %>
    <h1><%= @article.title %></h1>
  </header>
  <pre>
    <%= @article.description %>
  </pre>
</article>

<%= link_to "modifier", edit_article_path(@article) %>