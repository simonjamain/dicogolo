<%= form_for article do |articleForm| %>

  <div>
    <%= image_tag article.illustration.url(:maxi), alt: @article.title %>
    <div class="image_to_upload_overlay"></div>
    <%= label :article, :illustration do %>
      <i class="fa fa-cloud-upload" aria-hidden="true"></i>
    <% end %>
    <%= articleForm.file_field :illustration, class: 'photo_upload', style: "visibility:hidden;" %>
  </div>
  <%= articleForm.text_field :title, placeholder: "entrez un titre" %>
  <%= articleForm.text_area :description, placeholder: "entrez une description" %>

  <%= content_tag :button, type: :submit, id: "main-floating-action-button" do %>
    <i class="fa <%= fabFontawesomeIconName %>" aria-hidden="true"></i>
  <% end %>

<% end %>

